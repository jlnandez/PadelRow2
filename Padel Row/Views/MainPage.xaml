<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Padel_Row.Views.MainPage"
             Title="Padel Row App">

    <StackLayout HorizontalOptions="Center">
        
        <Image
        Margin="0,0"
        Aspect="AspectFill"
        HeightRequest="150"
        Source="padelrow1.png"
        WidthRequest="250" />

        <!--<Button
            BackgroundColor="OrangeRed"
            TextColor="White"
            Clicked="OnButtonClicked"
            CornerRadius="20"
            Text="Cerrar sesion" />-->

        <Button
            BackgroundColor="OrangeRed"
            TextColor="White"
            Command="{Binding SignOutCommand}"
            CornerRadius="20"
            Text="Cerrar sesion" />

        <Line X1="40"
          Y1="0"
          X2="250"
          Y2="150"
          Stroke="Red" />



        <Button Text="Agregar Employee" x:Name="addEmployee" CornerRadius="100" Clicked="addEmployee_Clicked"/>
        <Line Y1="0" Y2="10" Stroke="Red" />
        <Button Text="Show Employee" x:Name="showEmployee" CornerRadius="100" Clicked="showEmployee_Clicked"/>



    </StackLayout>


</ContentPage>